{
  "name": "functions",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve:win": "set FIRESTORE_EMULATOR_HOST=localhost:8080 && npm run build && firebase emulators:start",
    "serve:unix": "FIRESTORE_EMULATOR_HOST=localhost:8080 npm run build && firebase emulators:start",
    "serve": "node -e \"process.platform==='win32'?require('child_process').execSync('npm run serve:win',{stdio:'inherit'}):require('child_process').execSync('npm run serve:unix',{stdio:'inherit'})\"",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "jest"
  },
  "engines": {
    "node": "24"
  },
  "main": "lib/index.js",
  "dependencies": {
    "dotenv": "^17.2.3",
    "firebase-admin": "^13.6.0",
    "firebase-functions": "^7.0.0",
    "graphql": "^16.12.0",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.9",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "firebase-functions-test": "^3.4.1",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.7.3"
  },
  "private": true
}
